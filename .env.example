# Database
DATABASE_URL=sqlite+aiosqlite:///./lifeos_data.db

# Spotify API
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8000/api/spotify/callback

# Garmin Connect
GARMIN_EMAIL=your_garmin_email@example.com
GARMIN_PASSWORD=your_garmin_password_here

# TransportAPI (for bus widget)
TRANSPORTAPI_APP_ID=your_transportapi_app_id_here
TRANSPORTAPI_APP_KEY=your_transportapi_app_key_here

# Home Assistant
HA_URL=http://your-home-assistant-url:8123
HA_TOKEN=your_home_assistant_long_lived_token_here

# Google API (for calendar/email widgets)
# Note: credentials.json should be placed in the backend/ directory
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
